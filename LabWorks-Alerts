<script>
  const tabs = {
    'tab-action':  'panel-action',
    'tab-open':    'panel-open',
    'tab-overdue': 'panel-overdue',
    'tab-done':    'panel-done',
  };

  document.querySelectorAll('.radio-inputs .radio input').forEach(tab => {
    tab.addEventListener('change', () => {
      document.querySelectorAll('.panel-content').forEach(p => p.classList.remove('active'));
      document.getElementById(tabs[tab.id])?.classList.add('active');
    });
  });

  // Collapse/expand
  const panel = document.getElementById('salertsPanel');
  const toggleBtn = document.getElementById('toggleBtn');
  let collapsed = false;

  toggleBtn.addEventListener('click', () => {
    collapsed = !collapsed;
    panel.classList.toggle('collapsed', collapsed);
    toggleBtn.textContent = collapsed ? 'â–´' : 'â–¾';
    toggleBtn.title = collapsed ? 'Expand alerts' : 'Collapse alerts';
  });

  // Mark all read â€” remove unread dots
  document.getElementById('markReadBtn').addEventListener('click', () => {
    document.querySelectorAll('.unread-dot').forEach(d => d.remove());
    document.querySelectorAll('.tab-dot').forEach(d => d.remove());
  });
</script>

