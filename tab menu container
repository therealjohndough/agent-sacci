<script>
  const tabs = document.querySelectorAll('.radio-inputs .radio input');
  const panels = {
    'tab-news':    'panel-news',
    'tab-events':  'panel-events',
    'tab-updates': 'panel-updates',
    'tab-alerts':  'panel-alerts',
  };

  tabs.forEach(tab => {
    tab.addEventListener('change', () => {
      document.querySelectorAll('.panel-content').forEach(p => p.classList.remove('active'));
      document.getElementById(panels[tab.id])?.classList.add('active');
    });
  });
</script>

